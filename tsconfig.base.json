{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@nextgenmedprep/common-types": ["packages/common-types/src"],
      "@nextgenmedprep/common-types/*": ["packages/common-types/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ]
}
