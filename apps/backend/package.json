{
  "name": "@nextgenmedprep/backend",
  "version": "1.0.0",
  "description": "Backend API for NextGen MedPrep with email subscriptions",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/apps/backend/src/app.js"
  },
  "keywords": [
    "nextgen",
    "medprep",
    "backend",
    "supabase",
    "subscriptions"
  ],
  "author": "NextGen MedPrep",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "cloudipsp-node-js-sdk": "^1.0.8",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.7",
    "stripe": "^14.9.0",
    "tsconfig-paths": "^3.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.19",
    "@types/nodemailer": "^6.4.20",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "_moduleAliases": {
    "@": "dist/apps/backend/src",
    "@/types": "dist/apps/backend/src/types",
    "@/services": "dist/apps/backend/src/services",
    "@/controllers": "dist/apps/backend/src/controllers",
    "@/middleware": "dist/apps/backend/src/middleware",
    "@/utils": "dist/apps/backend/src/utils",
    "@/routes": "dist/apps/backend/src/routes"
  }
}
