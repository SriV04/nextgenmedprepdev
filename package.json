{
  "name": "nextgenmedprep-monorepo",
  "version": "1.0.0",
  "description": "NextGen MedPrep Monorepo - Medical and Dental School Preparation Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev -w @nextgenmedprep/frontend",
    "dev:backend": "npm run dev -w @nextgenmedprep/backend",
    "build:frontend": "npm run build -w @nextgenmedprep/frontend",
    "build:backend": "npm run build -w @nextgenmedprep/backend",
    "build:types": "npm run build -w @nextgenmedprep/common-types",
    "build:all": "npm run build:types && npm run build:backend && npm run build:frontend",
    "start:frontend": "npm run start -w @nextgenmedprep/frontend",
    "start:backend": "npm run start -w @nextgenmedprep/backend",
    "typecheck": "npm run typecheck -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "test": "npm run test -ws --if-present",
    "clean": "npm run clean -ws --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "dev": "npm run dev:backend & npm run dev:frontend"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "monorepo",
    "nextgen",
    "medprep",
    "medical-school",
    "dental-school",
    "tutoring",
    "education"
  ],
  "author": "NextGen MedPrep",
  "license": "MIT"
}
